# Database Configuration
BOW_DATABASE_URL=postgresql://username:password@localhost:5432/bagofwords

# Encryption Key (generate a secure key for production)
BOW_ENCRYPTION_KEY=

# Google OAuth (optional)
BOW_GOOGLE_CLIENT_ID=
BOW_GOOGLE_CLIENT_SECRET=

# SMTP Settings (optional)
BOW_SMTP_HOST=smtp.resend.com
BOW_SMTP_PORT=587
BOW_SMTP_USERNAME=resend
BOW_SMTP_PASSWORD=
BOW_SMTP_FROM_NAME=Bag of words
BOW_SMTP_FROM_EMAIL=hi@bagofwords.com

# Environment
ENVIRONMENT=production

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Performance Settings
BOW_SLOW_REQUEST_THRESHOLD=2.0
BOW_ENABLE_RATE_LIMITING=true
BOW_REQUESTS_PER_MINUTE=60
BOW_REQUESTS_PER_HOUR=1000

# Cache Settings
BOW_CACHE_TTL_PERMISSIONS=900
BOW_CACHE_TTL_SCHEMA=3600
BOW_CACHE_TTL_SETTINGS=1800